@model List<OrderItem>

@{
    ViewBag.Title = "Order";
}

<h2>Order Items</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price.ToString("C")</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice.ToString("C")</td>
        </tr>
    }
    <tr>
        <td colspan="3"><strong>Total:</strong></td>
        <td><strong>@Model.Sum(item => item.TotalPrice).ToString("C")</strong></td>
    </tr>
</table>

       

