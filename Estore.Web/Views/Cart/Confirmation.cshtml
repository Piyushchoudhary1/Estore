@model int


<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #ffd6d6; /* Primary background */
        color: #444; /* Black shade */
    }

    .container {
        max-width: 600px;
        margin: auto;
        text-align: center;
        padding: 20px;
    }

    .logo {
        max-width: 150px;
        margin: auto;
        display: block;
        margin-bottom: 20px;
    }

    .title {
        color: #6610f2; /* Secondary background */
        font-size: 24px;
        font-weight: 700;
    }

    .message {
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .order-id {
        color: #ff523b; /* Secondary background */
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 20px;
    }

    img {
        max-width: 100%;
        display: block;
        margin: auto;
        margin-top: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Hover effects */
    .title:hover,
    .order-id:hover {
        color: #5a0db2; /* Darkened version of secondary background */
    }
</style>

<div class="container">
    <img class="logo" src="/images/logo.png" alt="eStore Logo">

    <div class="title">Order Confirmation</div>
    <div class="message">
        Thank you for your order! It will be processed shortly .
    </div>
    <div class="order-id">Order ID: @Model</div>
    <img src="/images/order-confirmation.png" alt="Order Confirmation Image">
</div>
