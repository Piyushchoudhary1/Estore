@model CartDto

<!-- Adding custom font from Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Roboto', sans-serif;
    }

    .border {
        border: 2px solid #ff523b;
    }

    .text-warning {
        color: #ff523b !important;
    }

    .text-primary {
        color: #444;
    }

    .btn-custom {
        background-color: #ff523b;
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #e04832;
        }

    .btn-outline-custom {
        border-color: #ff523b;
        color: #ff523b;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-custom:hover {
            background-color: #ff523b;
            color: white;
        }

    .product-name {
        font-size: 20px;
        transition: transform 0.3s ease, color 0.3s ease;
    }

        .product-name:hover {
            color: #e04832;
            transform: scale(1.05);
        }

    .card-header {
        background: #ff523b;
        color: white;
    }

    .card-body {
        background-color: #ffd6d6;
    }

    .card-footer {
        background-color: #ffd6d6;
    }

    .form-control {
        background-color: #fff;
        color: #444;
    }
</style>

<form method="post">
    <input asp-for="CartHeader.UserId" hidden />
    <input asp-for="CartHeader.CartHeaderId" hidden />
    <input asp-for="CartHeader.CouponCode" hidden />
    <input asp-for="CartHeader.Discount" hidden />
    <input asp-for="CartHeader.CartTotal" hidden />

    <div class="border mt-2 p-4 rounded">
        <div class="container row">
            <div class="col-md-7 col-12">
                <span style="font-size:25px;" class="text-warning mb-2">Order Summary</span>
            </div>
            <div class="col-md-5 col-12">
                <a asp-action="CartIndex" class="btn btn-outline-custom form-control">Back to Cart</a>
            </div>
            <br /><br /><br />
            <hr />
            <div class="col-7">
                <div class="row pt-2">
                    <div class="col-12 py-2">
                        <input asp-for="CartHeader.Name" placeholder="Full name..." class="form-control" />
                        <span asp-validation-for="CartHeader.Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 py-2">
                        <input class="form-control" asp-for="CartHeader.Phone" placeholder="Phone number..." />
                        <span asp-validation-for="CartHeader.Phone" class="text-danger"></span>
                    </div>
                    <div class="col-12 pt-2">
                        <label class="col-form-label text-primary">Order will be ready in 30 minutes after placing the order. If you place the order when the restaurant is closed, it will be ready the next day.</label>
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="card mt-2">
                    <div class="card-body">
                        <div class="d-none d-lg-block">
                            <div class="row text-primary">
                                <div class="col-6">
                                    Product Details
                                </div>
                                <div class="col-3">
                                    Price
                                </div>
                                <div class="col-3">
                                    Count
                                </div>
                            </div>
                        </div>
                        <hr />
                        @foreach (var cartObj in Model.CartDetails)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span class="product-name">@cartObj.Product.Name</span>
                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;">@cartObj.Product.Price.ToString("c")</span>
                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;">@cartObj.Count</span>
                                </div>
                            </div>
                            <hr />
                        }
                        <div class="row">
                            <div class="col-12 text-center pr-4 text-danger">
                                Order Total: @Model.CartHeader.CartTotal.ToString("c") <br />
                                @if (Model.CartHeader.Discount > 0)
                                {
                                    <span class="text-success">Order Discount: @Model.CartHeader.Discount.ToString("c")</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-custom form-control">
                                    <span>Place Order</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
