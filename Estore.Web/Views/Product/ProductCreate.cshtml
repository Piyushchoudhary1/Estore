@model EStore.Web.Models.ProductDto

@{
    ViewData["Title"] = "AddProduct";
}
<link rel="stylesheet" href="~/css/ProductStyle.css" />

<div class="container">
      <div class="user-view__content">
        <div class="user-view__form-container">
          <h2 class="heading-secondary ma-bt-md">
            Create Product to add to EStore
          </h2>
            <form asp-action="ProductCreate" method="post">
            <div class="form-group">
              <label class="form__label" for="name">Name</label>
              <input
                class="form__input"
                type="text"
                id="name"
                name="name"
                required
                style="margin-bottom: 20px"
              />
            </div>

            <div class="form-group">
              <label class="form__label" for="price">Price</label>
              <input
                class="form__input"
                type="number"
                id="price"
                name="price"
                required
                style="margin-bottom: 20px"
              />
            </div>

            <div class="form-group">
              <label class="form__label" for="calories">Category</label>
              <input
                class="form__input"
                type="text"
                id="calories"
                name="catogery"
                style="margin-bottom: 20px"
              />
            </div>

            <div class="form-group">
            <label class="form__label" for="hotel">Image URL</label>
            <input
              class="form__input"
              type="text"
              id="hotel"
              id="hotel"
              name="hotel
              style="margin-bottom: 20px"
            />
          </div> 

            <div class="form-group">
              <label class="form__label" for="description">Description</label>
              <textarea
                class="form__input"
                id="description"
                name="description"
                required
                style="margin-bottom: 20px"
              ></textarea>
            </div>

            <div class="form-group form__photo-upload">
              <input
                class="btn-text form__upload"
                id="food-image"
                type="file"
                accept="image/*"
                name="photo"
              />
              <label for="food-image" style="margin-bottom: 30px"
                >Choose product photo</label
              >
            </div>

            <button type"submit" class="btn-createDish btn btn--small btn--green">Add Product</button>

          </form>
        </div>
      </div>
    </div>
