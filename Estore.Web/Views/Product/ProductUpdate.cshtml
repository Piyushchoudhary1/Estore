@model EStore.Web.Models.ProductDto

@{
    ViewData["Title"] = "UpdateProduct";
}
<link rel="stylesheet" href="~/css/ProductStyle.css" />

<div class="container">
    <div class="user-view__content">
        <div class="user-view__form-container">
            <h2 class="heading-secondary ma-bt-md">
                Update Product
            </h2>
            <form asp-action="ProductEdit">
                <div class="form-group">
                    <label class="form__label" for="name" asp-for="Name">Name</label>
                    <input class="form__input"
                           type="text"
                           id="name"
                           name="name"
                           required
                           style="margin-bottom: 20px"
                           asp-for="Name" />
                </div>

                <div class="form-group">
                    <label class="form__label" for="price" asp-for="Price">Price</label>
                    <input class="form__input"
                           type="number"
                           id="price"
                           name="price"
                           required
                           style="margin-bottom: 20px"
                           asp-for="Price" />
                </div>

                <div class="form-group">
                    <label class="form__label" for="Category" asp-for="CategoryName">Category</label>
                    <input class="form__input"
                           type="text"
                           id="Category"
                           name="catogery"
                           style="margin-bottom: 20px"
                           asp-for="CategoryName" />
                </div>

                <div class="form-group">
                    <label class="form__label" for="hotel" asp-for="ImageUrl">Image URL</label>
                    <input class="form__input"
                           type="text"
                           id="hotel"
                           id="hotel"
                           name="hotel
                           style="margin-bottom: 20px"
                           asp-for="ImageUrl" />
                </div>

                <div class="form-group">
                    <label class="form__label" for="description" asp-for="Description">Description</label>
                    <textarea class="form__input"
                              id="description"
                              name="description"
                              required
                              style="margin-bottom: 20px"
                              asp-for="Description"></textarea>
                </div>

                <div class="form-group form__photo-upload">
                    <input class="btn-text form__upload"
                           id="food-image"
                           type="file"
                           accept="image/*"
                           name="photo" 
                           asp-for="Image" />
                    <label for="food-image" style="margin-bottom: 30px" asp-for="Image">Choose product photo</label>
                </div>

                <button type"submit" class="btn-createDish btn btn--small btn--green">Update Product</button>

            </form>
        </div>
    </div>
</div>
