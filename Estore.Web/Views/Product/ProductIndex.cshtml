@model IEnumerable<EStore.Web.Models.ProductDto>

@{
    ViewData["Title"] = "AllProducts";
}
<link rel="stylesheet" href="~/css/ProductStyle.css" />

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Products List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Product</a>

			</div>
		</div>
		<div class="container">
		<div class="all-products">
		@foreach (var item in Model)
		{
				<div class="el-common">
					<div class="img">
							<img src="@Url.Content("~/shirt.jpeg")" alt="@item.Name">
					</div>
					<div class="description">
						<p class="product-name">@item.Name</p>
						<!-- <p class="calories-content fig-content-common highlight-grey--1">@item.CategoryName</p> -->
						<p class="price">
							&#8377; <span class='price-span'>@item.Price</span> INR
						</p>
						<p class="product-description">
							@item.Description
						</p>
					</div>
						<button class="add-to-cart" asp-route-id="@item.ProductId">add to cart ➜</button>
					<div class="buttons-container">
							<a asp-action="ProductDelete" asp-route-id="@item.ProductId" class="remove-product button-animate">remove</a>
							<a asp-action="ProductEdit" asp-route-id="@item.ProductId" class="update-product button-animate">update</a>
						</div>
				</div>
		}
		</div>
			</div>

	</div>

</div> 


